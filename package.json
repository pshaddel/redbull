{
  "name": "redbull",
  "version": "0.0.1",
  "description": "A boilerplate for express app using relational database and sequelize",
  "main": "index.js",
  "scripts": {
    "pretest:watch": "docker compose -f docker-compose.test.yml up -d",
    "test:watch": "jest --watch --forceExit --detectOpenHandles --runInBand",
    "posttest:watch": "docker compose -f docker-compose.test.yml down",
    "pretest": "docker compose -f docker-compose.test.yml up -d",
    "test": "DATABASE_URL=mongodb://user:password@127.0.0.1:27017/database jest --forceExit --detectOpenHandles --runInBand --silent  --workerIdleMemoryLimit=512MB",
    "test:ci": "jest --forceExit --detectOpenHandles --runInBand --silent  --workerIdleMemoryLimit=512MB",
    "pretest:cov": "docker compose -f docker-compose.test.yml up -d",
    "posttest": "docker compose -f docker-compose.test.yml down",
    "test:cov": "DATABASE_URL=mongodb://user:password@127.0.0.1:27017/database jest --coverage --forceExit --detectOpenHandles --runInBand --silent  --workerIdleMemoryLimit=512MB",
    "posttest:cov": "docker compose -f docker-compose.test.yml down",
    "prestart:dev": "docker compose up -d && node ./generate_dev_keys.js",
    "start:dev": "NODE_ENV=dev tsc-watch --onSuccess 'node ./dist/src/app.js'",
    "poststart:dev": "docker compose down",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format:ci": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "prepare": "husky install",
    "docs": "npx typedoc",
    "deploy": "node ./generate_dev_keys.js && docker-compose -f deploy.yml up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pshaddel/ts-express-mongoose-rest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pshaddel/ts-express-mongoose-rest/issues"
  },
  "homepage": "https://github.com/pshaddel/ts-express-mongoose-rest#readme",
  "dependencies": {
    "argon2": "^0.40.1",
    "axios": "^1.6.8",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^6.2.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.3",
    "rate-limit-redis": "^4.2.0",
    "rate-limiter-flexible": "^5.0.3",
    "typescript": "^4.9.5",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@swc/core": "^1.3.38",
    "@swc/jest": "^0.2.24",
    "@types/argon2": "^0.15.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-check-updates": "^16.7.10",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typedoc": "^0.23.26",
    "typedoc-plugin-markdown": "^3.14.0"
  }
}
